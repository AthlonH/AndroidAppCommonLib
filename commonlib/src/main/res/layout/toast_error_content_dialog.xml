<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/error_dialog_bg_black">

    <View
        android:layout_width="520px"
        android:layout_height="1px"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:id="@+id/errorIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80px"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/titleTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48px"
        android:text="标题"
        android:textSize="50px"
        android:textColor="#FF6733"
        android:textStyle="bold"
        android:layout_marginLeft="84px"
        android:layout_marginRight="84px"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/errorIv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/msgTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="文字内容"
        android:textColor="@color/white"
        android:textSize="34px"
        android:layout_marginTop="26px"
        android:layout_marginBottom="84px"
        android:layout_marginLeft="84px"
        android:layout_marginRight="84px"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/titleTv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>